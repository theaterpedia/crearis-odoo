<odoo>

    <!-- EVENTS/CONFIGURATION/EVENT locations -->
    <record model="ir.ui.view" id="view_event_location_form">
        <field name="name">Event Locations</field>
        <field name="model">event.track.location</field>
        <field name="inherit_id" ref="website_event_track.view_event_location_form"/>
        <field name="arch" type="xml">
            <form string="Event Locations">
                <sheet>
                    <group>
                        <field name="sequence"/>
                        <field name="provider_id"/>
                        <field name="type"/>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="company_ids" widget="many2many_tags"/>
                        <field name="is_default"/>
                    </group>
                    <group
                        attrs="{'invisible':[('type', 'not in', ['space.ms-teams'])]}"
                    >
                        <field name="site_id" />
                        <field name="list_id" />
                        <field name="drive_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_event_location_tree">
        <field name="name">Event Location</field>
        <field name="model">event.track.location</field>
        <field name="inherit_id" ref="website_event_track.view_event_location_tree"/>
        <field name="arch" type="xml">
            <tree string="Event Location" editable="bottom">
                <field name="provider_id"/>
                <field name="type"/>
                <field name="description"/>
                <field name="company_ids" widget="many2many_tags"/>
                <field name="is_default"/>    
                <field name="site_id" attrs="{'readonly':[('type', 'not in', ['space.ms-teams'])]}"/>
                <field name="list_id" attrs="{'readonly':[('type', 'not in', ['space.ms-teams'])]}"/>
                <field name="drive_id" attrs="{'readonly':[('type', 'not in', ['space.ms-teams'])]}"/>                            
            </tree>
        </field>
    </record>  


</odoo>
