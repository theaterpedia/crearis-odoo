<odoo>

    <!-- EVENTS/CONFIGURATION/EVENT locations -->
    <record model="ir.ui.view" id="view_config_template_form">
        <field name="name">Config Template</field>
        <field name="model">crearis.config.template</field>
        <field name="arch" type="xml">
            <form string="Config Template">
                <sheet>
                    <group>
                        <field name="is_default"/>
                        <field name="sequence"/>
                        <field name="name"/>
                        <field name="type"/>
                        <field name="description"/>
                        <field name="company_id"/>
                    </group>
                    <group>
                        <field name="json_config" attrs="{'readonly':[('type', '=like', 'html%')]}" />
                        <field name="html_config" attrs="{'readonly':[('type', '=like', 'json%')]}" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_config_template_tree">
        <field name="name">Config Templates</field>
        <field name="model">crearis.config.template</field>
        <field name="arch" type="xml">
            <tree string="Config Templates" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="is_default"/>                
                <field name="name"/>
                <field name="type"/>
                <field name="description"/>
                <field name="company_id"/>
                <field name="json_config" attrs="{'readonly':[('type', '=like', 'html%')]}"/>
                <field name="html_config" attrs="{'readonly':[('type', '=like', 'json%')]}"/>                          
            </tree>
        </field>
    </record>  

</odoo>
