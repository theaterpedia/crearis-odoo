<odoo>
  <!-- Crearis App Menu -->
  <menuitem id="menu_crearis" name="Crearis" />

  <!-- Menu item to open the Domain User Config  list -->
  <menuitem id="menu_crearis_settings" name="Settings" parent="menu_crearis" />    

  <!-- Menu item to open the Domain User Config  list -->
  <menuitem id="menu_crearis_systables" name="System Tables" parent="menu_crearis" />  

  <!-- Action to open the Domain User Config list -->
  <record id="action_crearis_domainuser" model="ir.actions.act_window">
    <field name="name">Domain Users</field>
    <field name="res_model">crearis.domainuser</field>
    <field name="view_mode">tree,form</field>
  </record>

  <!-- Menu item to open the Domain User Config  list -->
  <menuitem id="menu_crearis_domainuser" name="Domain Users" parent="menu_crearis_settings" action="action_crearis_domainuser" />  

  <!-- Action to open the Version list -->
  <record id="action_crearis_version" model="ir.actions.act_window">
    <field name="name">Versions</field>
    <field name="res_model">crearis.version</field>
    <field name="view_mode">tree,form</field>
  </record>

  <!-- Menu item to open the Version list -->
  <menuitem id="menu_crearis_version" name="Versions" parent="menu_crearis_systables" action="action_crearis_version" />  

  <!-- Action to open the Online Spaces list -->
  <record id="action_crearis_location" model="ir.actions.act_window">
    <field name="name">Locations</field>
    <field name="res_model">event.track.location</field>
    <field name="view_mode">tree,form</field>
  </record>

  <!-- Menu item to open the Online Spaces list -->
  <menuitem id="menu_crearis_location" name="Locations" parent="menu_crearis_settings" action="action_crearis_location" /> 

  <!-- Action to open the Config Templates list -->
  <record id="action_crearis_config_template" model="ir.actions.act_window">
    <field name="name">Locations</field>
    <field name="res_model">crearis.config.template</field>
    <field name="view_mode">tree,form</field>
  </record>

  <!-- Menu item to open the Config Templates list -->
  <menuitem id="menu_crearis_config_template" name="Config Templates" parent="menu_crearis_settings" action="action_crearis_config_template" />  

</odoo> 