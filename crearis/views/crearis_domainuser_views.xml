<odoo>
    <record id="view_domainuser_form" model="ir.ui.view">
        <field name="name">Domain User Form</field>
        <field name="model">crearis.domainuser</field>
        <field name="arch" type="xml">
            <form string="Domain User">
                <group>
                    <field name="domain_id" />
                    <field name="role" />
                    <field name="name" />
                    <field name="user_id" />
                    <field name="description" />
                    <field name="capabilities" />
                    <field name="active" />
                    <button name="json_data_store" type="object" string="Save Settings" />
                </group>
            </form>         
        </field>
    </record>
    <record id="view_tree_domainuser" model="ir.ui.view">
        <field name="name">Domain User List</field>
        <field name="model">crearis.domainuser</field>
        <field name="arch" type="xml">
            <tree>
                <field name="cid" />
                <field name="domain_id" />
                <field name="role" />
                <field name="name" />
                <field name="user_id" />
                <field name="description" />
                <field name="active" />
                <field name="version" />
            </tree>
        </field>
    </record>
    <record id="view_search_domainuser" model="ir.ui.view">
        <field name="name">Domain User Filters</field>
        <field name="model">crearis.domainuser</field>
        <field name="arch" type="xml">
            <search>
            <field name="domain_id"/>
            <field name="role" />
            <field name="user_id" />
            <filter name="filter_inactive"
                    string="Inactive"
                    domain="[('active','=',True)]"/>
            <filter name="filter_active"
                    string="Active"
                    domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>          
</odoo>